#	[ $AC = "ON" ] && echo "AC"|| [ $status = "Discharging" ] && [ $battery -le 20 ] && 
#	echo "$battery  " || echo "$battery $status" | sed 's/Discharging/ /; s/Charging/ /; s/Full/ /'
