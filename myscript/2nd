#bat(){
#	if [ -f "/sys/class/power_supply" ];then
#
#		status="$(cat /sys/class/power_supply/BAT?/status)"
#		battery="$(cat /sys/class/power_supply/BAT?/capacity)"
#	else
#		AC=ON
